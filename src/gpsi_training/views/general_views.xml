<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!-- MENU PRINCIPAL TRAINING -->
        <menuitem
            id="menu_home"
            name="Training"
            sequence="1">
        </menuitem>
        <!-- /MENU PRINCIPAL TRAINING -->

        <!-- Dashboard -->
        <act_window
            id="res_partner_action_dashboard"
            name="Dashboard"
            res_model="res.partner"
            view_mode="tree,form">
        </act_window>

        <menuitem
            id="res_partner_menu_dashboard"
            name="Dashboard"
            parent="menu_home"
            action="res_partner_action_dashboard"
            sequence="1">
        </menuitem>
        <!-- /Dashboard -->

        <!-- Operations -->
        <menuitem
            id="res_partner_menu_operations"
            name="Operations"
            parent="menu_home"
            sequence="2">
        </menuitem>

            <!-- Operations/Attendees -->
            <act_window
                id="res_partner_action_operations_attendees"
                name="Attendees"
                res_model="event.registration"
                view_mode="tree,form">
            </act_window>
            <menuitem
                id="res_partner_menu_operations_attendees"
                name="Attendees"
                parent="res_partner_menu_operations"
                action="res_partner_action_operations_attendees"
                sequence="1">
            </menuitem>

            <!-- Operations/Events -->
            <act_window
                id="res_partner_action_operations_events"
                name="Events"
                res_model="event.event"
                view_mode="kanban,calendar,tree,form"
                context="{'search_default_upcoming':1}">
            </act_window>
            <menuitem
                id="res_partner_menu_operations_events"
                name="Events"
                parent="res_partner_menu_operations"
                action="res_partner_action_operations_events"
                sequence="2">
            </menuitem>

            <!-- Operations/Documents Control -->
            <act_window
                id="res_partner_action_operations_documents"
                name="Documents Control"
                res_model="res.partner"
                view_mode="tree,form">
            </act_window>
            <menuitem
                id="res_partner_menu_operations_documents"
                name="Documents Control"
                parent="res_partner_menu_operations"
                action="res_partner_action_operations_documents"
                sequence="3">
            </menuitem>
        <!-- /Operations -->

        <!-- Reports -->
        <menuitem
            id="res_partner_menu_resports"
            name="Reports"
            parent="menu_home"
            sequence="3">
        </menuitem>

            <!-- Reports/Events -->
            <act_window
                id="res_partner_action_resports_events"
                name="Events"
                res_model="res.partner"
                view_mode="tree,form">
            </act_window>
            <menuitem
                id="res_partner_menu_resports_events"
                name="Events"
                parent="res_partner_menu_resports"
                action="res_partner_action_resports_events"
                sequence="1">
            </menuitem>
        <!-- /Dashboard -->

        <!-- Configuration -->
        <menuitem
            id="res_partner_menu_configuration"
            name="Configuration"
            parent="menu_home"
            sequence="4">
        </menuitem>

            <!-- Configuration/Settings -->
            <act_window
                id="res_partner_action_configuration_settings"
                name="Settings"
                res_model="res.partner"
                view_mode="tree,form">
            </act_window>
            <menuitem
                id="res_partner_menu_configuration_settings"
                name="Settings"
                parent="res_partner_menu_configuration"
                action="res_partner_action_configuration_settings"
                sequence="1">
            </menuitem>
        <!-- /Configuration -->

    </data>
</openerp>