<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="event_view_form_inherit_gpsi_training_event" model="ir.ui.view">
            <field name="name">GPSI Training – Event extension</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">
                <field name="organizer_id" position="after">
                    <field name="gs_type" />
                    <field name="gs_body_id" />
                </field>
                <group name="main_field_group" position="after">
                    <group string="Competencies">
                        <field name="gs_compentecy_ids" nolabel="1" />
                    </group>
                </group>
            </field>
        </record>

        <record id="event_registration_view_form_inherit_gpsi_training_attendee" model="ir.ui.view">
            <field name="name">GPSI Training – Attendee extension</field>
            <field name="model">event.registration</field>
            <field name="inherit_id" ref="event.view_event_registration_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="gs_cert_number" />
                </field>
                <field name="date_closed" position="after">
                    <field name="gs_date_exam" />
                    <field name="gs_date_cert" />
                </field>
            </field>
        </record>
    </data>
</odoo>
