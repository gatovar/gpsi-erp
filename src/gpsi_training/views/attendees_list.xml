<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>

        <report
            id="event_attendees_list_report"
            model="event.event"
            string="Lista de Asistentes"
            report_type="qweb-pdf"
            name="event.attendees_list_report"
            file="event.attendees_list_report"
        />

        <template id="event.attendees_list_report">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">
                    <div class="page">
                        <div class="container" style="">

                        <div class="row">
                            <div class="row" style="float: left;">
                                <div class="col-md-12"><img src="http://gms.globalstd.com/rutas_online/logo_actual.jpg" width="300px" class="img-responsive" alt="Imagen responsive" /></div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="" style="font-size: 18px; margin-bottom: 20px; text-align: center;"><label for="titulo">LISTA DE ASISTENTES</label></div>
                        </div>

                        <div class="row">
                        <div style="width: 100%; height: 5px; background-color: #a31d21;"></div>
                        </div>

                        <div class="row">
                            <table class="table table-condensed">
                                <tr>
                                    <td style="width: 20%; border: none;"><strong>Instructor:</strong></td>
                                    <td style="width: 80%; border: none;"><t t-esc="o.gs_instructor_id.name"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; border: none;"><strong>Curso:</strong></td>
                                    <td style="width: 80%; border: none;"><t t-esc="o.name"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; border: none;"><strong>Responsable:</strong></td>
                                    <td style="width: 80%; border: none;"><t t-esc="o.user_id.name"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; border: none;"><strong>Tipo:</strong></td>
                                    <td style="width: 80%; border: none;"><t t-esc="o.event_type_id.name"/></td>
                                </tr>
                                <tr>
                                    <td style="width: 20%; border: none;"><strong>Fecha:</strong></td>
                                    <td style="width: 80%; border: none;"><span t-field="o.date_begin" t-field-options='{"format": "dd-MM-yyyy"}'/> a <span t-field="o.date_end" t-field-options='{"format": "dd-MM-yyyy"}'/></td>
                                </tr>
                            </table>
                        </div>

                        <div class="row">
                        <div style="width: 100%; height: 5px; background-color: #a31d21;"></div>
                        </div>

                        <div class="row" style="margin-top: 10px;">
                            <div class="col-md-12">
                                <table class="table table-bordered table-striped">
                                    <thead>
                                    <tr>
                                        <th style="width: 80%;">Asistente</th>
                                        <th class="text-center" style="width: 20%;">Firma</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    <t t-foreach="o.registration_ids" t-as="attendee">
                                        <t t-if="attendee.state == 'open'">
                                        <tr>
                                            <td style="width: 80%;"><t t-esc="attendee.name"/></td>
                                            <td style="width: 20%;"></td>
                                        </tr>
                                        </t>
                                    </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        </div>
                    </div>
                </t>
            </t>
        </template>

    </data>
</odoo>