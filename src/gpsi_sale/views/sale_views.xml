<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sales_order_view_form_inherit_gpsi_sales" model="ir.ui.view">
            <field name="name">GPSI Sales â€“ Sales Order extension</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="page_contract" string="Contract">
                        <group string="Contract">
                            <group>
                                <field name="gs_cycle" />
                                <field name="gs_standard_id" />
                                <field name="gs_certification_type" />
                                <field name="gs_scheme" />
                                <field name="gs_duration" />
                                <field name="gs_certificate_status" />
                            </group>
                            <group>
                                <field name="gs_is_contract" />
                                <field name="gs_apply_design" />
                                <field name="gs_is_multisite" />
                                <field name="gs_is_multilocate" />
                                <field name="gs_need_bilingual_auditor" />
                                <field name="gs_expiration_date" />
                            </group>
                        </group>
                        <group>
                            <field name="gs_responsible_id" />
                        </group>
                        <group string="Scope">
                            <field name="gs_scope" nolabel="1"/>
                        </group>
                        <group string="Notes">
                            <field name="gs_notes" nolabel="1"/>
                        </group>
                        <group string="Special Conditions">
                            <field name="gs_special_conditions" nolabel="1"/>
                        </group>
                        <group string="SQF">
                            <group>
                                <field name="gs_code" />
                                <field name="gs_audit_date" />
                            </group>
                            <group>
                                <field name="gs_risk_level" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
