<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_project_cert_sales_opps">
        <field name="name">gpsi.project.cert.sales.opps.form</field>
        <field name="model">project.project</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="gpsi_is_cert_project" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="gpsi_sales_team_id" attrs="{'invisible': [('gpsi_is_cert_project','=',False)]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_cert_sales_opps">
        <field name="name">gpsi.task.cert.sales.opps.form</field>
        <field name="model">project.task</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <field name="gpsi_is_cert_task" invisible="1"/>
            </xpath>
            <xpath expr="//group" position="after">
                <group string="Documents" attrs="{'invisible': [('gpsi_is_cert_task','=',False)]}">
                    <group>
                        <field name="gpsi_opportunity_id"/>
                    </group>
                    <group>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_crm_opportunity_inherit">
        <field name="name">gpsi.crm.opportunity.form</field>
        <field name="model">crm.lead</field>
        <field name="priority">18</field>
        <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="gpsi_opportunity_type"/>
            </xpath>
            <xpath expr="//field[@name='team_id']" position="after">
                <field name="gpsi_cert_app" string="Application" attrs="{'invisible': [('gpsi_opportunity_type','!=','certification_audit')]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_crm_opportunity_simplified_inherit">
        <field name="name">gpsi.crm.opportunity.simplified.form</field>
        <field name="model">crm.lead</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="crm.view_create_opportunity_simplified"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="gpsi_opportunity_type"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_application_certification_tree">
            <field name="name">gpsi.crm.application.certification.tree</field>
            <field name="model">gpsi.crm.application.certification</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="Certification Applications">
                    <field name="name" string="Lead"/>
                    <field name="create_date" string="Creation Date"/>
                    <field name="city"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_application_certification_form">
            <field name="name">gpsi.crm.application.certification.form</field>
            <field name="model">gpsi.crm.application.certification</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Certification Application">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Company name..." required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="standard_id" required="1"/>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" required="1"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street" required="1"/>
                                    <field name="city" placeholder="City" class="o_address_city" required="1"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" required="1"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" required="1"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" required="1"/>
                                </div>
                                <field name="website" widget="url" placeholder="e.g. www.globalstd.com"/>
                            </group>
                            <group>
                                <field name="phone1" widget="phone" required="1"/>
                                <field name="phone2" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="language"/>
                                <field name="co_profile"/>
                            </group>
                        </group>
                        <group string="Contact Information">
                            <group>
                                <field name="contact_name" required="1"/>
                                <field name="contact_position" required="1"/>
                            </group>
                            <group>
                                <field name="contact_email1" required="1"/>
                                <field name="contact_email2" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Company Profile">
                                <field name="co_profile_desc" placeholder="Company profile description..."/>
                            </page>
                            <page string="Certification Information">
                                <group>
                                    <group>
                                        <field name="audit_type"/>
                                        <field name="apply_design"/>
                                        <field name="certified"/>
                                    </group>
                                    <group>
                                        <field name="preaudit_date"/>
                                        <field name="audit_stage1_date"/>
                                        <field name="audit_stage2_date"/>
                                        <field name="audit_surveillance1_date"/>
                                        <field name="audit_surveillance2_date"/>
                                    </group>
                                </group>
                                <group string="Scope">
                                    <field name="scope" nolabel="1"/>
                                </group>
                                <group string="Exclussions justifications details">
                                    <field name="exclusions" nolabel="1"/>
                                </group>
                                <group string="Other standards details">
                                    <field name="certified_desc" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Facilities">
                                <field name="facility_ids">
                                    <tree>
                                        <field name="street"/>
                                        <field name="city"/>
                                        <field name="description"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Misc">
                                <group>
                                    <group string="Outsourcing">
                                        <field name="has_external_proc"/>
                                        <field name="external_proc" string="Process Name"/>
                                        <field name="external_proc_outsource"/>
                                    </group>
                                    <group string="External Consultant">
                                        <field name="has_consultant"/>
                                        <field name="consultant_name"/>
                                        <field name="consultant_phone"/>
                                    </group>
                                    <group string="Main Partners">
                                        <field name="customers"/>
                                        <field name="suppliers"/>
                                    </group>
                                    <group string="Good Practices">
                                        <field name="good_practices"/>
                                        <field name="technologies"/>
                                        <field name="has_internal_audits"/>
                                        <field name="has_management_reviews"/>
                                        <field name="has_quality_manual"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_application_certification_site_form">
            <field name="name">gpsi.crm.application.certification.site.form</field>
            <field name="model">gpsi.crm.application.certification.site</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <form string="Facility">
                    <sheet>
                        <group>
                            <group>
                                <label for="street" string="Address"/>
                                <div class="o_address_format">
                                    <field name="street" placeholder="Street..." class="o_address_street" required="1"/>
                                    <field name="street2" placeholder="Street 2..." class="o_address_street" required="1"/>
                                    <field name="city" placeholder="City" class="o_address_city" required="1"/>
                                    <field name="state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}" required="1"/>
                                    <field name="zip" placeholder="ZIP" class="o_address_zip" required="1"/>
                                    <field name="country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}" required="1"/>
                                </div>
                            </group>
                            <group>
                                <field name="shift1"/>
                                <field name="shift2"/>
                                <field name="shift3"/>
                                <field name="shift4"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="view_application_course_tree">
            <field name="name">gpsi.crm.application.course.tree</field>
            <field name="model">gpsi.crm.application.course</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <tree string="Course Applications">
                    <field name="name" string="Lead"/>
                    <field name="create_date" string="Creation Date"/>
                    <field name="city"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_application_course_form">
            <field name="name">gpsi.crm.application.course.form</field>
            <field name="model">gpsi.crm.application.course</field>
            <field name="arch" type="xml">
                <form string="Course Application">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" default_focus="1" placeholder="Course Name..."/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="course_date" string="Start Date"/>
                                <field name="course_fee" string="Cost"/>
                                <field name="currency" string="Currency"/>
                            </group>
                            <group>
                                <field name="travel_expenses_applies" string="Travel Expenses Applies"/>
                                <field name="food_applies" string="Food Applies"/>
                                <field name="translator_needed" string="Translator Needed"/>
                                <field name="disability_applies" string="Disability Applies"/>
                                <field name="previous_information" string="Pre-course Information"/>
                                <field name="impartition_location_site" string="Impartition Location Site"/>
                            </group>
                        </group>
                        <group string="Customer Information">
                            <group>
                                <field name="customer_organization" string="Organization"/>
                                <field name="main_contact" string="Contact"/>
                                <field name="customer_phone" string="Phone"/>
                            </group>
                            <group>
                                <field name="customer_position" string="Position"/>
                                <field name="customer_email" widget="email" string="Email" placeholder="e.g. info@globalstd.com"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Participants">
                                <field name="participant_ids">
                                    <tree editable="bottom">
                                        <field name="name"/>
                                        <field name="email"/>
                                        <field name="position"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Shipping Information">
                                <group>
                                    <group>
                                        <label for="street" string="Address"/>
                                        <div class="o_address_format">
                                            <field name="shipping_street" placeholder="Street..." class="o_address_street"/>
                                            <field name="shipping_street2" placeholder="Street 2..." class="o_address_street"/>
                                            <field name="shipping_city" placeholder="City" class="o_address_city"/>
                                            <field name="shipping_state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                            <field name="shipping_zip_code" placeholder="ZIP" class="o_address_zip"/>
                                            <field name="shipping_country_id" placeholder="Country" class="o_address_country" options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"/>
                                        </div>
                                    </group>
                                    <group>
                                        <field name="attention_to" string="Contact"/>
                                        <field name="shipping_position" string="Contact Position"/>
                                        <field name="company" string="Company"/>
                                        <field name="shipping_phone" string="Phone"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Billing Information">
                                <group>
                                    <group>
                                        <label for="street" string="Address"/>
                                        <div class="o_address_format">
                                            <field name="billing_street" placeholder="Street..." class="o_address_street"/>
                                            <field name="billing_street2" placeholder="Street 2..." class="o_address_street"/>
                                            <field name="billing_township" placeholder="Township" class="o_address_city"/>
                                            <field name="billing_state_id" class="o_address_state" placeholder="State" options="{&quot;no_open&quot;: True}"/>
                                            <field name="billing_zip_code" placeholder="ZIP" class="o_address_zip"/>
                                        </div>
                                    </group>
                                    <group>
                                        <field name="business_name" string="Business Name"/>
                                        <field name="billing_phone" string="Phone"/>
                                        <field name="billing_email" string="Email"/>
                                        <field name="rfc"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Deposit Payment">
                                <group>
                                    <group>
                                        <field name="payment_type"/>
                                    </group>
                                    <group string="A Nombre de:">
                                        <label string="Global Standards, S.C."/>
                                    </group>
                                </group>
                                <group>
                                    <group string="Cuenta para dólares:">
                                        <label string="Traspaso internacional banco responsable: JP Morgan Chase "/><br/>
                                        <label string="SWIF CODE / ABA: BMSXMXMM / 021000021"/><br/>
                                        <label string="Banco beneficiario: BANCO SANTANDER S.A. "/><br/>
                                        <label string="Cuenta: 400047144"/><br/>
                                        <label string="Beneficiario final:82500664354"/><br/>
                                        <label string="sucursal: 4659 Atemajac del Valle"/>
                                    </group>
                                    <group string="Cuenta para pesos mexicanos:">
                                        <label string="Banco: BANCO SANTANDER DE MÉXICO SA"/><br/>
                                        <label string="Cuenta: 65504358627"/><br/>
                                        <label string="CLABE: 014320655043586275"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                        <group>
                            <div class="oe_chatter">
                                <field name="message_follower_ids" widget="mail_followers"/>
                                <field name="message_ids" widget="mail_thread"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

      <act_window id="action_gpsi_crm_course"
         name="Course"
         res_model="gpsi.crm.application.course"
         view_mode="tree,form">
      </act_window>

      <menuitem id="menu_gpsi_course"
         name="Course"
         parent="sales_team.menu_base_partner"
         groups="base.group_no_one"
         sequence="9">
      </menuitem>

      <menuitem id="submenu_gpsi_course"
         name="Registration Course"
         parent="menu_gpsi_course"
         action="action_gpsi_crm_course"
         groups="base.group_no_one"
         sequence="1" >
      </menuitem>

</odoo>
