<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="lead_tag_course" model="crm.lead.tag">
            <field name="name">Course</field>
            <field name="color">5</field>
        </record>

        <record id="lead_tag_certification" model="crm.lead.tag">
            <field name="name">Certification</field>
            <field name="color">5</field>
        </record>

        <record id="lead_tag_certification_1" model="crm.lead.tag">
            <field name="name">Certification/ISO 9001:2008</field>
            <field name="color">5</field>
        </record>

        <record id="lead_tag_certification_2" model="crm.lead.tag">
            <field name="name">Certification/ISO 9001:2015</field>
            <field name="color">5</field>
        </record>

        <record id="project_certification_sales_opportunities" model="project.project">
            <field name="name">Certification Sales Opportunities</field>
            <field name="label_tasks">Opportunities</field>
            <field name="privacy_visibility">followers</field>
        </record>

        <record id="stage_cso_unassigned" model="project.task.type">
            <field name="name">Unassigned</field>
            <field name="sequence">0</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

        <record id="stage_cso_qualify" model="project.task.type">
            <field name="name">Qualify</field>
            <field name="sequence">1</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

        <record id="stage_cso_proposition" model="project.task.type">
            <field name="name">Proposition</field>
            <field name="sequence">2</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

        <record id="stage_cso_client_approval" model="project.task.type">
            <field name="name">Client Approval</field>
            <field name="sequence">3</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

        <record id="stage_cso_adjust" model="project.task.type">
            <field name="name">Adjust</field>
            <field name="sequence">4</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

        <record id="stage_cso_approval" model="project.task.type">
            <field name="name">Approval</field>
            <field name="sequence">5</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

        <record id="stage_cso_won" model="project.task.type">
            <field name="name">Won</field>
            <field name="sequence">6</field>
            <field name="fold">True</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

        <record id="stage_cso_lost" model="project.task.type">
            <field name="name">Lost</field>
            <field name="sequence">7</field>
            <field name="fold">True</field>
            <field name="project_ids" eval="[(6, 0, [ref('gpsi_crm.project_certification_sales_opportunities')])]"/>
        </record>

    </data>
</odoo>