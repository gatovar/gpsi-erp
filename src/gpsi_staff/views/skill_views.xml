<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="skill_view_tree" model="ir.ui.view">
            <field name="name">gpsi.staff.skill.tree</field>
            <field name="model">gpsi.staff.skill</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Skill">
                    <field name="name" string="Name" />
                </tree>
            </field>
        </record>
        <record id="skill_view_form" model="ir.ui.view">
            <field name="name">gpsi.staff.skill.form</field>
            <field name="model">gpsi.staff.skill</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Skill">
                    <sheet>
                        <group>
                            <field name="name" string="Name" />
                        </group>
                        <notebook>
                            <page string="Children">
                                <field name="child_ids">
                                    <tree>
                                        <field name="name" string="Name" />
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="employee_view_form_inherit_gpsi_staff_skill" model="ir.ui.view">
            <field name="name">gpsi.staff.skill.form.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <div name="button_box" position="inside">
                    <button class="oe_stat_button" name="attachment_tree_view" type="object" icon="fa-files-o">
                        <field string="Documents" name="doc_count" widget="statinfo"/>
                    </button>
                </div>
                <xpath expr="//notebook" position="inside">
                    <page string="Competences">
                        <field name="gs_competence_ids">
                            <tree editable="bottom">
                                <field name="skill_id" required="1" />
                                <field name="rating" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="attachment_view_form_inherit_gpsi_staff_category" model="ir.ui.view">
            <field name="name">gpsi.ir.attachment.category.form</field>
            <field name="model">ir.attachment</field>
            <field name="inherit_id" ref="base.view_attachment_form" />
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <field name="mimetype" position="after">
                    <field name="gs_tags_ids" widget="many2many_tags" placeholder="e.g. Type Document" groups="base.group_hr_user" />
                </field>
            </field>
        </record>
    </data>
</openerp>