<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="hr_employee_profile_view_tree" model="ir.ui.view">
            <field name="name">hr.employee.profile.tree</field>
            <field name="model">hr.employee.profile</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree string="Profile">
                    <field name="employee_id" />
                </tree>
            </field>
        </record>
        <record id="hr_employee_profile_view_form" model="ir.ui.view">
            <field name="name">hr.employee.profile.form</field>
            <field name="model">hr.employee.profile</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <form string="Employee Profile">
                    <field name="id" invisible="1" />
                    <sheet>
                        <div class="oe_title">
                            <label for="employee" class="oe_edit_only" string="Employee" />
                            <h1>
                                <field name="employee_id" />
                            </h1>
                            <label for="certifications" class="oe_edit_only" string="Certifications Summary" />
                            <h3>
                                <field name="summary" widget="html" />
                            </h3>
                        </div>
                        <notebook>
                            <page string="Experience">
                                <field name="experience_ids" context="{'default_experience_id':id}">
                                    <tree editable="bottom">
                                        <field name="company_id" string="Company" />
                                        <field name="job_position" string="Position" />
                                        <field name="job_description" string="Description" />
                                        <field name="start_date" string="Start Date" />
                                        <field name="end_date" string="End Date" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Education">
                                <field name="education_ids" context="{'default_education_id':id}">
                                    <tree editable="bottom">
                                        <field name="study_level" string="Study Grade" />
                                        <field name="alma_mater" string="Alma MÃ¡ter" />
                                        <field name="start_date" string="Start Date" />
                                        <field name="end_date" string="End Date" />
                                    </tree>
                                </field>
                            </page>
                            <page string="Customers">
                                <field name="customer_ids" context="{'default_client_id':id}">
                                    <tree editable="bottom">
                                        <field name="company_id" string="Company"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>