<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="view_project_type_bpm">
        <field name="name">gpsi.project.type.bpm.form</field>
        <field name="model">project.task.type</field>
        <field name="priority">10</field>
        <field name="inherit_id" ref="project.task_type_edit"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <group string="Activity Management">
                    <group>
                        <field name="bpm_assignee_id"/>
                    </group>
                    <group>
                    </group>
                </group>
                <notebook>
                    <page string="Candidate Users">
                        <field name="bpm_canditate_ids">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                    <page string="Candidate Groups">
                        <field name="bpm_canditate_group_ids">
                            <tree>
                                <field name="name"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

</odoo>
